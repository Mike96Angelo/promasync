{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["ESNEXT"],
    "outDir": "./es2015",
    "rootDir": "./ts",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "ts/": ["ts/"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "filesGlob": [
    "./ts//.ts",
    "./test//.ts",
    "./typings/index.d.ts",
    "./custom_typings//.d.ts",
    "./node_modules/@types//.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
